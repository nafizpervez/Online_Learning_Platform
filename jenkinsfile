pipeline {
    agent any
    stages{
        stage('Installing Python3') {
                steps {
                    script {
                        sh "echo Python3 install started..."
                        sh '''
                            apt-get update
                            apt-get install -y python3
                        '''
                        sh "echo Python3 install ended"
                    }
                }
        }
        stage('Installing pipx') {
                steps {
                    script {
                        sh "echo pipx installing..."
                        sh '''
                            apt-get install -y pipx
                        '''
                        sh "pipx installted"
                    }
                }
        }
        stage('Installing docker-compose') {
                steps {
                    script {
                        sh "echo docker-compose, pytest installing..."
                        sh '''
                            pipx install docker-compose pytest
                            apt-get update
                        '''
                        sh "docker-compose, pytest installted"
                    }
                }
        }
        
    }
}


